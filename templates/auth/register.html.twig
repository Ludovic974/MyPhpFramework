{% extends "base.html.twig" %}

{% block content %}

<div class="container-full">
    <div class="register-wrapper">
        <h1 class="register__title">Inscription</h1>
        <form action="#" method="post" id="RegisterForm">
            <div class="form-group">
                <label for="user_name">Nom d'utilisateur</label>
                <input type="text" name="user_name" id="user_name">
            </div>
            <div class="form-group">
                <label for="user_email">Adresse email</label>
                <input type="email" name="user_email" id="user_email">
            </div>
            <div class="form-group">
                <label for="user_pass">Mot de passe</label>
                <input type="password" name="user_pass" id="user_pass">
                <span class="toggle-password">O</span>
            </div>
            <div class="form-group">
                <label for="user_pass_confirm">Confirmez votre mot de passe</label>
                <input type="password" name="user_pass_confirm" id="user_pass_confirm">
                <span class="toggle-password">O</span>
            </div>
            <button type="submit">S'inscrire</button>
        </form>
        <p>Vous êtes déjà inscrit ? <a href="/se-connecter"> Connectez-vous !</a></p>
    </div>
</div>

{% endblock %}