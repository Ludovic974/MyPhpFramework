{% extends "base.html.twig" %}

{% block content %}

<div class="container-full">
    <div class="login-wrapper">
        <h1 class="login__title">Connexion</h1>
        <form action="{{ request.REDIRECT_URL }}" method="post" id="LoginForm">
        {% set formErreur = get.formulaire_erreur %}
            {% if formErreur == "00404" %}
                <ul class="form-errors">
                    <li>Utilisateur introuvable</li>   
                </ul>
            {% endif %}
            <div class="form-group">
                <label for="user_name">Nom d'utilisateur ou adresse email</label>
                <input type="text" name="user_name" id="user_name" required>
            </div>
            <div class="form-group">
                <label for="user_pass">Mot de passe</label>
                <input type="password" name="user_pass" id="user_pass" required>
                <span class="toggle-password">O</span>
            </div>
            <button type="submit">Se connecter</button>
        </form>
        <p>Vous n'avez pas de compte ? <a href="/s-enregistrer"> Inscrivez-vous !</a></p>
    </div>
</div>

{% endblock %}